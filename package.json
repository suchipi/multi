{
  "name": "@multi/monorepo",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/app-state",
    "packages/client-app",
    "packages/env",
    "packages/net-client",
    "packages/net-protocol",
    "packages/net-server",
    "packages/server-app"
  ],
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.1",
    "@babel/preset-typescript": "^7.1.0",
    "@workspace-builder/babel": "^0.2.0",
    "@workspace-builder/copy-ts": "^0.1.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "http-server": "^0.11.1",
    "nodemon": "^1.18.9",
    "workspace-builder": "^0.3.0"
  },
  "scripts": {
    "build": "workspace-builder",
    "build:watch": "workspace-builder watch",
    "dev:server": "nodemon --watch packages/server-app/dist packages/server-app/dist/index.js",
    "dev:client": "http-server -p 1234 packages/client-app/dist",
    "dev": "concurrently --names server,client,build 'yarn dev:server' 'yarn dev:client' 'yarn build:watch'"
  }
}
